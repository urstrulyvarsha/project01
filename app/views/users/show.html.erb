 <% if current_user %>
 <h1>Post something!</h1>
 <%= form_for @post do |f| %>
 	<%= f.text_area :content %>
 	<%= f.submit"Post! :)" %>
 <% end %>
 <% end %>

 <br>

 <h1><%= @user.name %>'s Posts</h1>
 <% @user.posts.each do|post| %>
 	<p><%= post.content %></p>
 	<%= time_ago_in_words(post.created_at) %>
 <% end %>